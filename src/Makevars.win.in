TARGET = $(subst 64,x86_64,$(subst 32,i686,$(WIN)))-pc-windows-gnu

# TARGET_DIR is set dynamically by tools/config.R to use a short path
# This avoids Windows MAX_PATH (260 char) limitations with aws-lc-sys
TARGET_DIR = @TARGET_DIR@
LIBDIR = $(TARGET_DIR)/$(TARGET)/@LIBDIR@
STATLIB = $(LIBDIR)/libdeltaR.a
PKG_LIBS = -L$(LIBDIR) -ldeltaR -lws2_32 -ladvapi32 -luserenv -lbcrypt -lntdll

all: $(SHLIB) rust_clean

.PHONY: $(STATLIB)

$(SHLIB): $(STATLIB)

# SHORT_BASE is set dynamically by tools/config.R
SHORT_BASE = @SHORT_BASE@
# CARGO_HOME is set dynamically by tools/config.R
# On Windows, this uses the same short base path as TARGET_DIR
# so that relative paths in aws-lc-sys CMake builds resolve correctly
CARGOTMP = @CARGO_HOME@
# Vendor dir is relative to SHORT_BASE
VENDOR_DIR = $(SHORT_BASE)/vendor

$(STATLIB):
	# Clean any previous build artifacts to avoid conflicts
	rm -Rf $(TARGET_DIR) $(CARGOTMP) $(VENDOR_DIR)
	mkdir -p $(TARGET_DIR)/libgcc_mock
	touch $(TARGET_DIR)/libgcc_mock/libgcc_eh.a

	if [ -f ./rust/vendor.tar.xz ]; then \
		mkdir -p $(CARGOTMP) && \
		tar xf rust/vendor.tar.xz -C $(SHORT_BASE) && \
		cp rust/vendor-config.toml $(CARGOTMP)/config.toml; \
	fi

	# Build the project using Cargo with additional flags
	# Note: TARGET_DIR is an absolute short path, so don't prepend CURDIR
	export CARGO_HOME=$(CARGOTMP) && \
	export LIBRARY_PATH="$(LIBRARY_PATH);$(TARGET_DIR)/libgcc_mock" && \
	RUSTFLAGS="$(RUSTFLAGS) --print=native-static-libs" cargo build @CRAN_FLAGS@ --target=$(TARGET) --lib @PROFILE@ --manifest-path=rust/Cargo.toml --target-dir=$(TARGET_DIR)

	# Always clean up CARGOTMP
	rm -Rf $(CARGOTMP);

rust_clean: $(SHLIB)
	rm -Rf $(CARGOTMP) $(VENDOR_DIR) @CLEAN_TARGET@

clean:
	rm -Rf $(SHLIB) $(STATLIB) $(OBJECTS) $(TARGET_DIR) $(VENDOR_DIR)
